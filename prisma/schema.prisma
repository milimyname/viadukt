generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String     @id @unique
  username     String
  avatar_url   String?
  key          Key[]
  auth_session Session[]
  Building     Building[]
}

model Session {
  id             String @id @unique
  user_id        String
  active_expires BigInt
  idle_expires   BigInt
  user           User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
}

model Key {
  id              String  @id @unique
  hashed_password String?
  user_id         String
  user            User    @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
}

model Building {
  id                          Int      @id @default(autoincrement())
  name                        String   @default("Untitled Building")
  upgrade_type                String   @default("Basic")
  upgrade_date                DateTime
  upgraded_energy_consumption Float
  energy_savings_percentage   Float
  projected_annual_savings    Float
  current_energy_price        Float
  current_energy_consumption  Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User?    @relation(fields: [userId], references: [id])
  userId    String?
}
