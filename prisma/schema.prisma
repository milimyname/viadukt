generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String        @id @unique
  username     String
  avatar_url   String?
  calculation  Calculation[]
  key          Key[]
  auth_session Session[]
}

model Session {
  id             String @id @unique
  user_id        String
  active_expires BigInt
  idle_expires   BigInt
  user           User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
}

model Key {
  id              String  @id @unique
  hashed_password String?
  user_id         String
  user            User    @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
}

model CostBlock {
  id             Int         @id @default(autoincrement())
  name           String
  description    String
  value          Float
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  calculation_id Int
  calculation    Calculation @relation(fields: [calculation_id], references: [id], onDelete: Cascade)
}

model Calculation {
  id               Int         @id @default(autoincrement())
  name             String
  result           Float
  selectedOperator String
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  user_id          String
  type             String
  schema           String
  user             User        @relation(fields: [user_id], references: [id], onDelete: Cascade)
  costBlocks       CostBlock[]

  @@index([user_id])
}
